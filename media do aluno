#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;
int main()
{ double PV1,PV2,EP,MF; //declarando variaveis 
	//entrada de dados 
cin>>PV1;
cin>>PV2;
cin>>EP;
//calculo
MF=(PV1+PV2)/2*0.9+EP*0.1;
//setar casas decimais 
cout<<fixed<<setprecision(1)<<endl;
//saida de dados 
cout<<MF;		
return 0;
}
